<html lang="es">
<head>
	<meta charset="UTF-8">
    <meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" type="image/png" href="/assets/images/Imagen2.png">
  <link rel="stylesheet" href="/assets/css/formulario.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Productos</title>
</head>
<header>
  <%- include('./layout/nav.ejs'); %>
</header>

<header>
  <%- include('./layout/diseño.ejs'); %>
</header>

<header>
  <%- include('./layout/diseñoproductos.ejs'); %>
</header>
<body>  
    <div class="container">
        <div class="row">
          <table border="1">
            <tbody>
                <% consultar_Productos.forEach(producto => { %>
                    <tr>
                      <form action="/agregarAlCarrito" method="post"> 
                          <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="tarjeta" style="border-bottom: 100px;">
                                <div class="card" style="width: auto; " >
                                    <img height="200" width="200" src="/<%- producto.filepath %>" class="card-img-top" alt="<%- producto.Descripcion %>">
                                    <div class="card-body">
                                      <center><h6 class="card-title"><%- producto.Nombre_producto %></h6></center>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                      <li class="list-group-item"><center><%- producto.Precio_publico %></center></li>                 
                                    <div class="card-body">
                                      <center><input type="number" name="cantidadPiezas" placeholder="Cantidad" value="1" style="text-align: center;"></center><br>
                                      <center><label for="">Piezas disponibles: </label></center>
                                      <center><label for="" name="stock"><%- producto.Existencias %></label></center><br>
                                      <input type="hidden" name="ID_Producto" value="<%- producto.ID_Producto %>">
                                      <center><input  type="submit" value="Añadir al carrito" style="height: auto; width: auto;"></center>
                                    </div>
                                </div><br><br>
                            </div>
                        </div>
                      </form>
                    </tr>
                <% }); %>
            </tbody>
        </table>
      </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<footer>
  <%- include('./layout/footer.ejs'); -%>
</footer>
</html>