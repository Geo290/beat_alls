<html lang="es">
<head>
	<meta charset="UTF-8">
    <meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" type="image/png" href="/assets/images/LOGO5.png">
    <link rel="stylesheet" href="/assets/css/formulario.css">
    <title><%= titulo %></title> 
</head>
<header>
    <%- include('./layout/nav.ejs'); %>
</header>

<header>
    <%- include('./layout/diseño.ejs'); %>
</header>

<header>
    <%- include('./layout/diseñocarrito.ejs'); %>
</header>
<body>
    <div class="cart-section mt-50 mb-50">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
                <table class="cart-table">
                    <thead class="cart-table-head">
                        <tr class="table-head-row">
                            <th class="product-name">Nombre</th>
                            <th class="product-name">Cantidad</th>
                            <th class="product-name">Precio unitario</th>
                            <th class="product-name">Acumulado</th>
                            <th class="product-total">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% consultar_Carrito.forEach(carrito => { %>
                            <tr class="table-body-row">
                                <td class="product-name"><%= carrito.Nombre_producto %></td>
                                <td class="product-name"><%= carrito.Cantidad_producto %></td>
                                <td class="product-name"><%= carrito.Precio_unitario_producto %></td>
                                <td class="product-name"><%= carrito.Precio_total_productos %></td>
                                <td class="product-name">
                                    <a onclick="eliminar(<%= carrito.ID_Producto %>)">Borrar</a>
                                </td>
                            </tr>
                        <% }); %>
                        <tr class="table-body-row">
                            <th class="product-name" style="text-align: center;">Total a pagar</th>
                        </tr>
                        <tr class="table-body-row">
                            <td class="product-name"><%= totalPagar %></td>
                        </tr>
                        <tr class="cart-buttons">
                            <td><button type="button" style="border-radius: 15px;"><a href="/enviarCarrito" style="text-decoration: none; color: black;">Continuar compra</a></button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
    <br>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.7/dist/sweetalert2.all.min.js"></script>
        <script>
        
            function eliminar(id)
            {
                Swal.fire({
                    title: '¿Quieres eliminar el producto?',
                    text: "Si eliminas el registro no podras revertir la accion",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Eliminar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if(result.isConfirmed){
                        window.location= '/eliminarProductoCarrito/'+id;
                        Swal.fire({
                            title: "Eliminado!",
                            text: "El producto ha sido eliminado",
                            icon: "success",
                            time:3000
                        });
                        setTimeout(function(){
                        },1000)
                    }
                })
            }

        </script>
</body>
<footer>
    <%- include('./layout/footer.ejs'); -%>
</footer>
</html>